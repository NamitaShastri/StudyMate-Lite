{
  "manifest_version": 3,
  "name": "StudyMate (Lite)",
  "version": "2.0",
  "description": "An AI Study Assistant that explains, summarizes, hints, and quizzes text â€” powered by Gemini 2.5 Flash.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*", "http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
